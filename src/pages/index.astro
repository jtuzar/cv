---
import "@fontsource/ubuntu-mono";
import Experience, {
    type ExperienceProps,
} from "../components/experience.astro";

const name = "Jakub Tuzar";
const jobTitle = "Full-stack Developer";

const bio =
    "Full-stack developer passionate about crafting intuitive, high-performance user experiences, with a continuous drive for learning and problem-solving. Thrive in dynamic, fast-paced environments.";

const contact = { phone: "+420 777 212 220", email: "jakub@tuzar.me" };

const education = [
    {
        title: "Bachelor's degree in Mechanical Engineering",
        uni: "CTU in Prague",
    },
    {
        title: "Master's degree in Economics",
        uni: "CTU in Prague",
    },
];

const experience: ExperienceProps[] = [
    {
        company: "Momence",
        start: "January 2025",
        position: "Full-stack Developer",
        description:
            "Drived development and design of the WhatsApp integration in a B2B2C SaaS to be used as a main channel of communication for customers who prefer that over SMS.",
    },
    {
        company: "Česká spořitelna a.s.",
        start: "October 2022",
        end: "December 2024",
        position: "Full-stack Developer",
        description:
            "Contributed to the development of an internet banking application for managing account sales at George. Designed and implemented features to enhance user experience, ensuring a seamless and secure transaction process. Collaborated with cross-functional teams to achieve business goals and deliver a reliable, user-friendly application.",
    },
    {
        company: "Prusa Research",
        start: "September 2021",
        end: "September 2022",
        position: "Data Analyst",
        description:
            "Developed reports and wrote SQL queries to extract and analyze data. Optimized existing SQL queries to improve performance and efficiency, contributing to better decision-making processes.",
    },
];

const skills = [
    "TypeScript",
    "React",
    "SvelteKit",
    "PostgreSQL",
    "Neovim",
    "Tailwindcss",
    "Learning",
];

const hobbies = ["Tech", "Bitcoin", "Parenting", "Gaming", "LEGO", "Guitar"];
---

<html class="bg-slate-400">
    <head>
        <meta charset="utf-8" />
    </head>
    <body class="bg-white p-8">
        <div class="border-2 border-black h-full flex flex-col">
            <div class="grid grid-cols-3">
                <div
                    id="avatar"
                    class="border-black border-r-2 border-b-2 col-span-1"
                >
                    <img class="h-full object-cover" src="profile-pic.jpeg" />
                </div>
                <div id="name-and-bio" class="h-full col-span-2">
                    <div class="border-b-black border-b-2 flex flex-col h-full">
                        <div
                            class="border-b-2 border-black bg-cyan-700 p-4 pl-8"
                        >
                            <h1 class="font-extrabold text-5xl text-white mb-4">
                                {name}
                            </h1>
                            <h2 class="text-2xl text-white">
                                {jobTitle}
                            </h2>
                        </div>
                        <div class="flex-1 flex flex-col">
                            <div class="pl-8 pt-4 flex flex-row gap-8">
                                <div>
                                    <a
                                        class="font-bold"
                                        href={`mailto:${contact.email}`}
                                        >{contact.email}
                                    </a>
                                </div>
                                <div>
                                    <p class="font-bold">
                                        {contact.phone}
                                    </p>
                                </div>
                            </div>
                            <div class="px-8 py-3 flex-1 flex items-center">
                                <p class="text-sm">
                                    {bio}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="flex flex-row flex-wrap grow">
                <div class="flex flex-col basis-1/3 border-r-2 border-black">
                    <div id="skills">
                        <h1
                            class="text-3xl font-bold px-6 py-2 flex items-center border-b-2 border-black"
                        >
                            Skills
                        </h1>
                        <div
                            class="px-8 py-3 col-span-1 border-black border-b-2 gap-8 max-h-44"
                        >
                            <ul class="list-disc grid grid-cols-2 gap-x-4">
                                {
                                    skills.map((s) => (
                                        <li class="text-sm">{s}</li>
                                    ))
                                }
                            </ul>
                        </div>
                    </div>
                    <div id="side-project">
                        <h1
                            class="text-3xl font-bold px-6 py-2 flex items-center border-b-2 border-black"
                        >
                            Side Project
                        </h1>
                        <div
                            class="px-8 py-3 col-span-1 border-black border-b-2 gap-8 max-h-44 text-sm"
                        >
                            <p>
                                <span class="font-bold">Bondly</span> - AI enhanced
                                activity suggestions for families
                            </p>
                            <br />
                            <a href="https://bondly.family" target="_blank"
                                >Check it out</a
                            >
                        </div>
                    </div>
                    <div id="education">
                        <h1
                            class="text-3xl font-bold px-6 py-2 flex items-center border-b-2 border-black"
                        >
                            Education
                        </h1>
                        <div class="px-8 py-3 border-black border-b-2">
                            <ul class="list-disc gap-4 grid grid-cols-1">
                                {
                                    education.map((e) => (
                                        <li class="text-sm">
                                            <p class="text-sm">{e.title}</p>
                                            <p class="text-xs italic">
                                                {e.uni}
                                            </p>
                                        </li>
                                    ))
                                }
                            </ul>
                        </div>
                    </div>
                    <div id="hobbies">
                        <h1
                            class="text-3xl font-bold px-6 py-2 flex items-center border-black border-b-2"
                        >
                            Hobbies
                        </h1>

                        <div class="px-8 py-3 col-span-1 gap-8 max-h-44">
                            <ul class="list-disc grid grid-cols-2 gap-x-4">
                                {
                                    hobbies.map((h) => (
                                        <li class="text-sm">{h}</li>
                                    ))
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="flex flex-col basis-2/3">
                    <div id="experience">
                        <h1
                            class="text-3xl font-bold px-6 py-2 flex items-center col-span-2 border-b-2 border-black"
                        >
                            Experience
                        </h1>
                        <div
                            class="px-8 py-3 col-span-2 grid grid-cols-1 gap-10"
                        >
                            {experience.map((e) => <Experience {...e} />)}
                        </div>
                    </div>
                </div>
                <div
                    id="footer"
                    class="grow w-full bg-cyan-700 border-black border-t-2"
                >
                </div>
            </div>
        </div>
    </body>
</html>

<style>
    html,
    body {
        font-family: "Ubuntu Mono", monospace;
        width: 210mm;
        height: 297mm;
    }
    @page {
        size: A4;
        margin: 0.5in;
    }

    /* Link styles */
    a {
        color: #0e7490; /* cyan-700 */
        text-decoration: underline;
        text-decoration-style: dotted;
        text-underline-offset: 2px;
        transition: all 0.2s ease;
    }

    a:hover {
        color: #0891b2; /* cyan-600 */
        text-decoration-style: solid;
        text-underline-offset: 3px;
    }

    a:focus {
        outline: 2px solid #0e7490;
        outline-offset: 2px;
        border-radius: 2px;
    }

    a:visited {
        color: #155e75; /* cyan-800 */
    }

    @media print {
        html,
        body {
            width: 210mm;
            height: 297mm;
            margin: 0;
            padding: 0;
            font-size: 12pt;
            line-height: 1.4;
        }

        .page {
            width: 210mm;
            min-height: 297mm;
            padding: 20mm;
            margin: 0 auto;
            background: white;
            box-shadow: none;
            page-break-after: always;
        }

        /* Ensure colors print */
        * {
            -webkit-print-color-adjust: exact !important;
            color-adjust: exact !important;
        }

        /* Keep link styles in print */
        a {
            color: #0e7490 !important;
            text-decoration: underline !important;
        }
    }
</style>
